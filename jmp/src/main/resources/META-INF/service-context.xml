<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="orderService" class="com.epam.jmp.spring.service.OrderService">
        <property name="param" value="paramValue"/>
    </bean>

    <bean id="itemService" class="com.epam.jmp.spring.service.ItemService">
        <constructor-arg type="String" value="paramValue"/>
    </bean>

    <bean id="sellerService" class="com.epam.jmp.spring.service.SellerService" autowire="byType"/>

    <bean id="productService" class="com.epam.jmp.spring.service.ProductService" autowire="constructor"/>

    <bean id="userService" class="com.epam.jmp.spring.service.UserService"
            p:param="paramValue"/>

    <bean id="proposalService" class="com.epam.jmp.spring.service.ProposalService">
        <constructor-arg type="UserRepository" ref="userRepository" />
        <property name="param" ref="param" />
    </bean>


</beans>